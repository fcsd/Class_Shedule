            android:layout_marginLeft="11dp"
            android:textSize="18sp">

        </Spinner>

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textAllCaps="true"
            android:layout_below="@+id/spinner10"
            android:text="Оберіть день"
            android:background="@android:color/transparent"
            android:textSize="18sp"
            android:id="@+id/section_text11"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp" />

        <Spinner
            android:id="@+id/spinner11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/section_text11"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="11dp"
            android:textSize="18sp">

        </Spinner>


        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textAllCaps="true"
            android:layout_below="@+id/spinner11"
            android:text="Оберіть пару"
            android:background="@android:color/transparent"
            android:textSize="18sp"
            android:id="@+id/section_text12"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp" />

        <Spinner
            android:id="@+id/spinner12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/section_text12"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="11dp"
            android:textSize="18sp">

        </Spinner>

        <Button
            android:id="@+id/temp_delete"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@+id/spinner12"
            android:text="Видалити проміжний розклад"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="11dp" />

        </RelativeLayout>

</RelativeLayout>

</ScrollView>



